<?xml version="1.0" encoding="utf-8"?>
<pomodoro.android7.ducthangwru.testpomodoro.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_marginLeft="50dp"
        android:id="@+id/pb_time"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:donut_progress="0"
        app:donut_max="100"
        android:layout_centerHorizontal="true"
        custom:donut_progress="0"
        />

    <ImageButton
        android:id="@+id/ib_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_play"
        android:layout_below="@+id/pb_time"
        android:layout_alignStart="@+id/pb_time"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp" />

    <ImageButton
        android:id="@+id/ib_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_stop_white_24px"
        android:layout_marginEnd="36dp"
        android:layout_alignTop="@+id/ib_play"
        android:layout_alignEnd="@+id/pb_time" />

</pomodoro.android7.ducthangwru.testpomodoro.SquareLayout>