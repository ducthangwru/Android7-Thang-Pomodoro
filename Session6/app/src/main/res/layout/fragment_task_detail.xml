<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pomodoro.android7.ducthangwru.testpomodoro.fragments.TaskDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_task"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/et_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/payment_per_secs" />
        </android.support.design.widget.TextInputLayout>

        <include layout="@layout/content_color" />
    </LinearLayout>
</FrameLayout>
