<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v_task_color"
        android:background="@drawable/shape_task_color"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/view_inter_space"/>

    <ImageView
        android:id="@+id/iv_done"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/v_task_color"
        android:layout_alignBottom="@id/v_task_color"
        android:layout_alignEnd="@id/v_task_color"
        android:layout_alignRight="@id/v_task_color"
        app:srcCompat = "@drawable/ic_done_white_24px"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ib_start"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:srcCompat = "@drawable/ic_play"
        android:background="@color/colorBackground"
        android:layout_width="48dp"
        android:layout_height="48dp" />
    <TextView
        android:id="@+id/tv_task_name"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/v_task_color" />

</RelativeLayout>